<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/playerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TradeBot Class xF4D2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.jeffmeyerson.moonstocks.views.TimerView
        android:id="@+id/timerView"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@+id/playerText"
        android:text="--:--"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/hardwareSpecsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerText"
        android:text="Hardware Specifications: 1024_CORE_INTEL_JANITORIAL_PROCESSOR"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hardwareSpecsText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/netProfitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balanceText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/efficiencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/netProfitText"
        android:text="Market efficiency:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/protocolText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/efficiencyText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="quitToMarket"
            android:text="Back" />
    </RelativeLayout>

    <com.jeffmeyerson.moonstocks.views.TimerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.jeffmeyerson.moonstocks.views.TimerView>

</RelativeLayout>